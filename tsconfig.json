{
  "compilerOptions": {
    /* Build Options */
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,

    /* Module Resolution */
    "moduleResolution": "node"
  },
  "include": [
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}